contract NoFreeMint is Ownable, IERC721Receiver {
    using SafeMath for uint;
    
    uint256 constant public MAX_INT = 0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff;
    
    uint constant public AMOUNT = 2 ether;
    address public _trias;
    address public _loot;
    address public _receiver;
    
    
    constructor(address trias_, address loot_) {
        _trias = trias_;
        _loot = loot_;
        
        IERC20(_trias).approve(_loot, MAX_INT);
    }
    
    function claim(string memory name, string memory feeling, uint256 galaxyID) external {
        IERC20(_trias).transferFrom(_msgSender(), address(this), AMOUNT);
        
        TriathonLoot(_loot).claim(name, feeling, galaxyID);
        
        uint number = IERC721Enumerable(_loot).totalSupply();
        TriathonLoot(_loot).safeTransferFrom(address(this), _msgSender(), number.sub(1));
    }
    
    function getAllERC20TokenBack() external onlyOwner {
        uint256 balance = IERC20(_trias).balanceOf(address(this));
        if (balance != 0) {
            IERC20(_trias).transfer(owner(), balance);
        }
    }
    
    function getERC721TokenBack(uint256 tokenId) external onlyOwner()  {
        if  (IERC721(_loot).ownerOf(tokenId) == address(this)) {
            IERC721(_loot).safeTransferFrom(address(this), owner(), tokenId);
        }
    }
    
    function onERC721Received(address, address, uint256, bytes calldata) external override pure returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function onERC1155Received(address, address, uint256, uint256, bytes calldata) external pure returns(bytes4) {
        return this.onERC1155Received.selector;
    }
}
